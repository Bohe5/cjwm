<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">
    <!--
          insert标签：单条插入菜品数据
          id="insert"：与Mapper接口中insert方法名一致，唯一标识该SQL
          useGeneratedKeys="true"：开启主键自动生成（适用于自增主键，如MySQL的AUTO_INCREMENT）
          keyProperty="id"：指定主键值回写到参数对象的"id"属性中（插入后可直接获取生成的主键）
        -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dish(name,category_id,price,image,description,create_time,update_time,create_user,update_user,status)
        values
        (#{name},#{categoryId},#{price},#{image},#{description},#{createTime},#{updateTime},#{createUser},#{updateUser},#{status})
    </insert>
    <!--
          delete标签：批量删除菜品（根据多个ID）
          id="deleteByIds"：与Mapper接口中deleteByIds方法名一致
        -->
    <delete id="deleteByIds">
        delete from dish where id in
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>
    <!--
     select标签：菜品分页查询（关联分类表，返回包含分类名称的VO）
     id="pageQuery"：与Mapper接口中pageQuery方法名一致
     resultType="com.sky.vo.DishVO"：查询结果映射到DishVO（视图对象，包含菜品信息+分类名称）
   -->
    <select id="pageQuery" resultType="com.sky.vo.DishVO">
        select d.* ,c.name as categoryName from dish d left join category c on d.category_id = c.id
        <where>
            <if test="name != null">
                and d.name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
            <if test="status != null">
                and d.status = #{status}
            </if>
        </where>
        <!-- 排序：按菜品创建时间降序（最新创建的菜品排在前面） -->
        order by d.create_time desc
    </select>
    <!--
      update标签：动态更新菜品信息（只更新传入非null的字段）
      id="update"：与Mapper接口中update方法名一致
    -->
    <update id="update">
        update dish
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="categoryId != null">category_id=#{categoryId},</if>
            <if test="price != null">price=#{price},</if>
            <if test="image != null">image=#{image},</if>
            <if test="description != null">description=#{description},</if>
            <if test="status != null">status=#{status},</if>
            <if test="updateTime != null">update_Time=#{updateTime},</if>
            <if test="updateUser != null">update_User=#{updateUser},</if>
        </set>
        where id = #{id}
    </update>
    <!--
      select标签：菜品列表查询（返回Dish实体，不关联分类表）
      id="list"：与Mapper接口中list方法名一致
      resultType="Dish"：查询结果映射到Dish实体类
      parameterType="Dish"：指定传入参数类型为Dish（通过实体属性传递查询条件）
    -->
    <select id="list" resultType="Dish" parameterType="Dish">
        select * from dish
        <where>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        <!-- 排序：按创建时间降序 -->
        order by create_time desc
    </select>
    <!--
     select标签：按条件统计菜品数量
     id="countByMap"：与Mapper接口中countByMap方法名一致
     resultType="java.lang.Integer"：返回结果为整数（统计数量）
   -->
    <select id="countByMap" resultType="java.lang.Integer">
        select count(id) from dish
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
        </where>
    </select>

</mapper>
